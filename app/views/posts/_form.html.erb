<tbody>
  <tr>
    <td valign='top'>
      <%= f.label :text, t(:Post) %>
    </td>
    <td>
      <%= f.text_area 'text', :cols => (cols || 70), :rows => (rows || 20) %>
    </td>
  </tr>
  
  <% if current_user.can?(:edit_posts, @forum) && !@post.new_record? %>
    <tr>
      <td><%= f.label 'edit_reason', t(:edit_reason) %></td>
      <td><%= f.text_field 'edit_reason' %></td>
    </tr>
    
    <tr>
      <td><%= check_box_tag 'silent_edit', t(:silent_edit) %></td>
      <td><%= label_tag 'silent_edit', t(:Edit_silently?) %></td>
    </tr>
  <% end %>
  
</tbody>
<tfoot>
  <tr>
    <td colspan='2'>
      <% if @post.new_record? %>
        <%= submit_tag(t(:Create)) %>
      <% else %>
        <%= submit_tag(t(:Update))%>
      <% end %>
    </td>
  </tr>
</tfoot>
